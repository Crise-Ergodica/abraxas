---
// src/components/Glifo.astro
interface Props {
  link?: string;
  acao?: string;
}

const { link, acao } = Astro.props as Props;
---

{
  link ? (
    <a href={link} class="glifo-texto">
      <slot />
    </a>
  ) : (
    <button class="glifo-texto" type="button">
      <slot />
    </button>
  )
}

<style>
  .glifo-texto {
    /* O SEGREDO DO MINIMALISMO: Resetar tudo */
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    font: inherit; /* Herda a fonte Merriweather do pai */
    cursor: pointer;

    /* O Estilo Visual */
    color: #a01a1a; /* Um vermelho sangue seco/tinta velha (mude se quiser) */
    text-decoration: none;
    border-bottom: 1px dashed transparent; /* Uma linha invis√≠vel */
    transition: all 0.3s ease;
  }

  /* Quando passar o mouse */
  .glifo-texto:hover {
    border-bottom-color: #a01a1a; /* A linha aparece */
    opacity: 0.8;
    transform: translateY(-1px); /* Sobe um pouquinho */
  }

  .glifo-texto:active {
    transform: translateY(0);
  }
</style>